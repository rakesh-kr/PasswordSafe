<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/seller_name"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seller_name_spinner_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/seller_name"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:prompt="@string/bank_name_spinner_title">
            <requestFocus/>
        </Spinner>

        <TextView
            android:id="@+id/email_address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/seller_name_spinner_title"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/email_address"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/email_address_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email_address_txt"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            android:ems="10" >
        </EditText>

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email_address_editText"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/password"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/password_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/password"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:ems="10"
            android:gravity="center">
        </EditText>


        <TextView
            android:id="@+id/confirm_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/password_editText"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/confirm_password_text"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/confirm_password_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/confirm_password_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:ems="10"
            android:gravity="center">
        </EditText>


        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/confirm_password_editText"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/website"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/website_editTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/website"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:textSize="15sp"
            android:ems="10"
            android:gravity="center">
        </EditText>


        <TextView
            android:id="@+id/display_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/display_text"
            android:textStyle="bold"
            android:layout_below="@+id/website_editTxt" />

        <EditText
            android:id="@+id/display_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/display_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:textSize="15sp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/unique_name"
            android:maxLength="40">
        </EditText>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/password_eye"
            android:contentDescription="@string/view_password"
            android:clickable="true"
            android:src="@drawable/password_eye_view"
            android:layout_alignTop="@+id/password_editText"
            android:layout_alignRight="@+id/password_editText"
            android:layout_alignEnd="@+id/password_editText" />



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/confirm_password_eye"
            android:contentDescription="@string/view_password"
            android:clickable="true"
            android:src="@drawable/password_eye_view"
            android:layout_alignTop="@+id/confirm_password_editText"
            android:layout_alignRight="@+id/confirm_password_editText"
            android:layout_alignEnd="@+id/confirm_password_editText" />


    </RelativeLayout>

</ScrollView>