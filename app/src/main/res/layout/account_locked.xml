<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lock_info"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:id="@+id/lock_info"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/secretKey"
        android:layout_below="@+id/lock_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/editt_text_style_red"
        android:drawableLeft="@drawable/ic_lock_icon"
        android:drawableStart="@drawable/ic_lock_icon"
        android:ellipsize="start"
        android:textColor="#25252D"
        android:gravity="center"
        android:hint="@string/secret_key_hint"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/secretKey"
        android:layout_centerHorizontal="true"
        android:text="@string/unlock"
        android:layout_marginTop="10dp"
        android:id="@+id/unlock"
        android:padding="20dp"
        android:background="@drawable/red_button"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warning"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/unlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/warning"
        android:textColor="#FF0000"/>
    



</RelativeLayout>