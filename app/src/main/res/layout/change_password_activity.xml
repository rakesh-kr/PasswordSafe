<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/member_imview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/change_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Your Password"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/image_icon"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/old_password_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Old Password"
        android:maxLength="10"
        android:inputType="numberPassword"
        android:textColor="#000000"
        android:layout_below="@+id/change_password_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/new_password_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="New Password"
        android:maxLength="8"
        android:inputType="numberPassword"
        android:textColor="#000000"
        android:layout_below="@+id/old_password_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/confirm_password_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Re-type password"
        android:maxLength="8"
        android:inputType="numberPassword"
        android:textColor="#000000"
        android:layout_below="@+id/new_password_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_password"
        android:id="@+id/show_password"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirm_password_editText"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/register_button"
        android:text="@string/change_password"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/show_password"
        android:layout_centerHorizontal="true" />


</RelativeLayout>