<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/textView_enter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/bank_name"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bank_name_spinner_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_enter_name"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:prompt="@string/bank_name_spinner_title">
            <requestFocus/>
        </Spinner>

        <TextView
            android:id="@+id/account_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bank_name_spinner_title"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/account_num_text"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/account_num_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/account_num_text"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textSize="17sp"
            android:maxLength="18"
            android:ems="10" >
        </EditText>

        <TextView
            android:id="@+id/atm_card_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/account_num_editText"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/atm_card_num_text"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/atm_card_num_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/atm_card_num_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textSize="17sp"
            android:ems="10"
            android:gravity="center"
            android:maxLength="19">
        </EditText>


        <TextView
            android:id="@+id/atm_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/atm_card_num_editText"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/atm_pin_date"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/atm_card_date_editTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/atm_card_date"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="date"
            android:textSize="15sp"
            android:ems="10"
            android:gravity="center"
            android:focusable="false"
            android:hint="@string/atm_card_date_hint">
        </EditText>


        <TextView
            android:id="@+id/atm_pin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/atm_card_date_editTxt"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/atm_pin_text"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/atm_pin_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/atm_pin_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="numberPassword"
            android:textSize="15sp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/atm_pin_text">
        </EditText>



        <TextView
            android:id="@+id/ifsc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/atm_pin_editText"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/ifsc"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ifsc_editTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ifsc_txt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:textSize="15sp"
            android:ems="10"
            android:gravity="center"
            android:maxLength="11">
        </EditText>

        <TextView
            android:id="@+id/display_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ifsc_editTxt"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="@string/display_text"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/display_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/display_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:textSize="15sp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/unique_name"
            android:maxLength="40">
        </EditText>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/password_eye"
            android:contentDescription="@string/view_password"
            android:clickable="true"
            android:layout_alignTop="@+id/atm_pin_editText"
            android:layout_alignRight="@+id/atm_pin_editText"
            android:layout_alignEnd="@+id/atm_pin_editText"
            android:src="@drawable/password_eye_view"
            />


    </RelativeLayout>

</ScrollView>